    <insert id="insertPlanner">
            INSERT INTO Planner A
            (
            A.PLAN_NO
            , A.USER_NO
            , A.TRAVEL_PLACE
            , A.START_DUE_DATE
            , A.END_DUE_DATE
            , A.LODGING_INFO
            , A.TRANSPORTATION
            , A.PL_DETAIL
            )
            VALUES
            (
            SEQ_PLAN_NO.NEXTVAL
            , #{ userNo }
            , #{ travelPlace }
            , #{ startDueDate }
            , #{ endDueDate }
            , #{ lodgingInfo }
            , #{ transportation }
            , #{ plDetail }
            )
    </insert>

    <delete id="deleteRecord" parameterType="_int">
        DELETE FROM OH_RECORD
        WHERE RECORD_NO = #{recordNo}
    </delete>

