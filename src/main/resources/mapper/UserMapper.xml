<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.semiTravelRecomend.model.dao.UserMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="userNo" parameterType="com.team.semiTravelRecomend.model.dto.UserVO">
        INSERT INTO user (USER_ID, USER_PWD, USER_NAME, EMAIL, ROLE)
        VALUES (#{userId},#{userPwd},#{userName},#{email},#{role});
    </insert>

    <select id="findByUserId" parameterType="String" resultType="com.team.semiTravelRecomend.model.dto.UserVO">
        select *
        from user
        where USER_ID = #{userId};
    </select>

</mapper>